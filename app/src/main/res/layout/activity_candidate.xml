<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
         <variable
             name="candidateMainViewModel"
             type="com.hcthang.apptuyendung.ui.candidate.CandidateMainModelView" />
        <import type="android.view.View"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_main">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#1D5C63"
            app:itemIconTint="@color/custom_color_bottom_nav_2"
            app:itemTextColor="@color/custom_color_bottom_nav_2"
            app:menu="@menu/menu_bottom_nav_candidate" />

        <FrameLayout
            android:id="@+id/fragmentMain2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomNav" />
    </RelativeLayout>

</layout>